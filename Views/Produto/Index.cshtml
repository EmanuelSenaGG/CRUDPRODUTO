@model IEnumerable<PrimeiroCRUD.Models.ProdutoModel>

@{
    ViewData["Title"] = "Gerenciamento";
}
<div class="text-center "> <h1 class="display-4">Gerenciamento de Produtos</h1></div>


<p>
    <a type="button" class="btn btn-primary btn-lg" asp-action="Create">Cadastrar Produto</a>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
       
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.Id)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            
            <td>
               
                 <a type="button" class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                    <a type="button" class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> 
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                    
            </td>
        </tr>
}
    </tbody>
</table>
